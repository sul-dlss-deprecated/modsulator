source 'https://rubygems.org'

# Need the current GitHub version of equivalent-xml for rspec integration tests. This forces you to use
# 'bundle exec' before the various rake commands etc. This should be taken out when a new version of
# equivalent-xml is up on rubygems.org.
gem "equivalent-xml", :git => 'https://github.com/mbklein/equivalent-xml.git'

# Dependencies are defined in modsulator.gemspec
gemspec

